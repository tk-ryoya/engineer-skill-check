<div class="employee_form">
  <% if employee.errors.present? %>
    <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: employee, local: true do |f| %>
    <div class="form-group">
      <%= f.label :number %>
      <%= f.text_field :number, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :account %>
      <%= f.text_field :account, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :date_of_joining %>
      <%= f.date_field :date_of_joining, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :department_id %>
      <%= f.collection_select :department_id, @departments, :id, :name, { prompt: false }, class:"form-control form-select" %>
    </div>

    <div class="form-group">
      <%= f.label :office_id %>
      <%= f.collection_select :office_id, @offices, :id, :name, { prompt: false }, class:"form-control form-select" %>
    </div>

    <div class="form-group">
      <%= f.label :employee_info_manage_auth, class: 'checkbox_label' %>
      <%= f.check_box :employee_info_manage_auth, :as => :boolean %>
    </div>

    <div class="form-group">
      <%= f.label :news_posting_auth, class: 'checkbox_label' %>
      <%= f.check_box :news_posting_auth, :as => :boolean %>
    </div>

    <%= f.submit '保存', class: "btn btn-primary" %>
  <% end %>
</div>
